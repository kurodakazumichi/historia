<p id="notice"><%= notice %></p>

<h1>Technologies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Birthday(Age)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= t.description %></td>
        <td><%= date(t.year, t.month, t.day) %>(<%= age(t.year, t.month, t.day) %>)</td>
        <td><%= link_to 'Show', t %></td>
        <td><%= link_to 'Edit', edit_technology_path(t) %></td>
        <td><%= link_to 'Destroy', t, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

